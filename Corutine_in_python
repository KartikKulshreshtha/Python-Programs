import time
def Hello():
    name = "John Sam Tom Satish Tushar Aman Akshat"
    time.sleep(3)

    while 1:
        text = (yield )
        if text in name:
            print("Your Name is available in the book")
        else:
            print("Your Name is Not Available in the book")

hello = Hello()
next(hello)
hello.send("Akshat")
